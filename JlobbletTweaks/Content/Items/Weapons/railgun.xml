    <replace sel="//*[@identifier='nuclearshell']/Projectile/Attack">
        <Affliction identifier="lacerations" strength="250"/>
    </replace>
    <replace sel="//*[@identifier='nuclearshell']/Projectile/StatusEffect[@type='OnUse']/Explosion">
        <Affliction identifier="burn" strength="500"/>
        <Affliction identifier="radiationsickness" strength="100"/>
        <Affliction identifier="explosiondamage" strength="500"/>
        <Affliction identifier="stun" strength="15"/>
    </replace>
    <!-- Physicorium shell -->
    <replace sel="//*[@identifier='alienshell']/Projectile/Attack">
        <Affliction identifier="lacerations" strength="500"/>
        <Affliction identifier="bleeding" strength="150"/>
        <Affliction identifier="stun" strength="15"/>
    </replace>
    <replace sel="//*[@identifier='alienshell']/Projectile/@maxtargetstohit">4</replace>
    <!-- Fix sprites -->
    <replace sel="//*[@identifier='railgunshell' or @identifier='nuclearshell' or @identifier='alienshell']/Sprite/@texture">Content/Items/Weapons/TurretsAndDepthCharges.png</replace>
